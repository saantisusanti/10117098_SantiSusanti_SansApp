<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.santisusanti.a10117098_santisusanti_sansapp.FriendList">
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm56"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="@dimen/dm100"
            android:layout_height="@dimen/dm30"
            android:layout_marginStart="150dp"
            android:layout_marginTop="@dimen/dm20"
            android:textSize="@dimen/font20"
            android:text="Add Friend"
            android:textStyle="bold"
            android:textColor="@color/item"
            app:layout_constraintStart_toStartOf="@+id/back_menu"
            app:layout_constraintTop_toTopOf="@id/view2"/>
    <ImageButton
            android:id="@+id/back_menu"
            android:layout_width="56dp"
            android:layout_height="41dp"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/dm10"
            android:layout_marginTop="@dimen/dm10"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:srcCompat="?android:attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/nama2"
        android:layout_width="@dimen/dm80"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm32"
        android:layout_marginTop="@dimen/dm30"
        android:text="Nama :"
        android:textColor="@color/item"
        android:textSize="@dimen/dm20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2"/>

    <EditText
        android:id="@+id/edt_nama"
        android:layout_width="@dimen/dm360"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm6"
        android:layout_marginTop="@dimen/dm16"
        app:layout_constraintStart_toEndOf="@+id/nama2"
        app:layout_constraintTop_toBottomOf="@id/view2" />

    <TextView
        android:id="@+id/nim"
        android:layout_width="@dimen/dm80"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm32"
        android:layout_marginTop="@dimen/dm30"
        android:text="NIM    :"
        android:textColor="@color/item"
        android:textSize="@dimen/dm20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nama2"/>

    <EditText
        android:id="@+id/edt_nim"
        android:layout_width="@dimen/dm360"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm6"
        android:layout_marginTop="@dimen/dm14"
        app:layout_constraintStart_toEndOf="@+id/nim"
        app:layout_constraintTop_toBottomOf="@id/edt_nama" />

    <TextView
        android:id="@+id/kelas"
        android:layout_width="@dimen/dm80"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm32"
        android:layout_marginTop="@dimen/dm30"
        android:text="Kelas  :"
        android:textColor="@color/item"
        android:textSize="@dimen/dm20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nim"/>

    <EditText
        android:id="@+id/edt_kelas"
        android:layout_width="@dimen/dm360"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm6"
        android:layout_marginTop="@dimen/dm14"
        app:layout_constraintStart_toEndOf="@+id/kelas"
        app:layout_constraintTop_toBottomOf="@id/edt_nim" />

    <TextView
        android:id="@+id/email"
        android:layout_width="@dimen/dm80"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm32"
        android:layout_marginTop="@dimen/dm30"
        android:text="Email  :"
        android:textColor="@color/item"
        android:textSize="@dimen/dm20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kelas"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="@dimen/dm360"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm6"
        android:layout_marginTop="@dimen/dm14"
        app:layout_constraintStart_toEndOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@id/edt_kelas" />
    <TextView
        android:id="@+id/sosmed"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm32"
        android:layout_marginTop="@dimen/dm30"
        android:text="Sosmed :"
        android:textColor="@color/item"
        android:textSize="@dimen/dm20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"/>

    <EditText
        android:id="@+id/edt_sosmed"
        android:layout_width="@dimen/dm360"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm6"
        android:layout_marginTop="@dimen/dm14"
        app:layout_constraintStart_toEndOf="@+id/sosmed"
        app:layout_constraintTop_toBottomOf="@id/edt_email" />

    <Button
        android:id="@+id/btnAddToDb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm36"
        android:layout_marginStart="@dimen/dm36"
        android:text="Tambah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_edit"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm36"
        android:layout_marginStart="@dimen/dm10"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_hapus"
        app:layout_constraintStart_toEndOf="@id/btnAddToDb" />

    <Button
        android:id="@+id/btn_hapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm36"
        android:layout_marginEnd="@dimen/dm36"
        android:text="Hapus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>